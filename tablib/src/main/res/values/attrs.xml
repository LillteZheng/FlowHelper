<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TabFlowLayout">
        <attr name="tab_type">
            <enum name="rect" value="0"/>
            <enum name="tri" value="1"/>
            <enum name="round" value="2"/>
            <enum name="color" value="3"/>
            <enum name="res" value="4"/>
        </attr>
        <attr name="tab_color" format="color|reference"/>
        <attr name="tab_width" format="dimension"/>
        <attr name="tab_height" format="dimension"/>
        <attr name="tab_round_size" format="dimension"/>
        <attr name="tab_margin_l" format="dimension"/>
        <attr name="tab_margin_t" format="dimension"/>
        <attr name="tab_margin_r" format="dimension"/>
        <attr name="tab_margin_b" format="dimension"/>
        <attr name="tab_click_animTime" format="integer"/>
        <attr name="tab_item_res" format="reference"/>
        <attr name="tab_item_autoScale" format="boolean"/>
        <attr name="tab_scale_factor" format="float"/>
        <attr name="tab_visual_count" format="integer"/>
        <attr name="tab_orientation">
            <enum name="vertical" value="1"/>
            <enum name="horizontal" value="2"/>
        </attr>
        <attr name="tab_action_orientaion">
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="tab_isAutoScroll" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="LabelFlowLayout">
        <attr name="label_maxSelectCount" format="integer"/>
        <attr name="label_isAutoScroll" format="boolean"/>
        <attr name="label_showLine" format="integer"/>
        <attr name="label_showMore_layoutId" format="reference"/>
        <attr name="label_showMore_Color" format="color"/>
        <attr name="label_handUp_layoutId" format="reference"/>
    </declare-styleable>

    <!--文件渐变属性-->
    <declare-styleable name="TabColorTextView">
        <attr name="colortext_default_color" format="color|reference"/> <!--默认颜色-->
        <attr name="colortext_change_color" format="color|reference"/> <!--渐变颜色-->
    </declare-styleable>

</resources>